{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValTown Config",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the val"
    },
    "type": {
      "type": "string",
      "enum": ["script", "http"],
      "description": "The type of the val"
    },
    "schedule": {
      "type": "string",
      "description": "Cron expression for scheduled vals"
    },
    "entry": {
      "type": "string",
      "description": "Entry point file path"
    }
  },
  "required": ["name", "type"]
}
